<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_fragment_drawerLayout"
    tools:context=".view.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_fragment_customAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bar_bg">

            <ImageView
                android:id="@+id/main_fragment_imgAppLogo"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_light" />

            <ImageView
                android:id="@+id/custom_app_bar_imgShare"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginEnd="17dp"
                android:src="@drawable/share_black"
                app:tint="?attr/appBarMenuColor" />

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/main_fragment_frameLayout"
            android:layout_below="@id/main_fragment_customAppBar"
            android:layout_above="@+id/main_fragment_bottomNavBar"
            android:layout_height="match_parent"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_fragment_bottomNavBar"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingBottom="2.5dp"
            android:background="@drawable/bottom_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@color/bottom_bar_menu_colors"
            app:itemTextColor="@color/bottom_bar_menu_colors"
            app:menu="@menu/bottom_menu" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:id="@+id/main_fragment_navigationView"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="?attr/navBgColor"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_above="@+id/main_fragment_linearNavBottom"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/nav_header_linearSettings"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/setting"
                            android:layout_height="27dp"
                            app:tint="?attr/boldColor"/>

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_marginTop="7dp"
                            android:src="?attr/shadowColor"
                            android:layout_height="2dp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:id="@+id/main_fragment_imgNavAppLogo"
                        android:layout_below="@+id/nav_header_linearSettings"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:src="@drawable/logo_light" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_marginTop="25dp"
                    android:id="@+id/main_fragment_recyclerView"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:id="@+id/main_fragment_linearNavBottom"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/instagram"
                    android:id="@+id/main_fragment_imgInstagram"
                    android:layout_height="25dp"
                    app:tint="?attr/boldColor"/>

                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/twitter_nav"
                    android:layout_marginStart="25dp"
                    android:id="@+id/main_fragment_imgTwitter"
                    android:layout_height="25dp"
                    app:tint="?attr/boldColor"/>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

</layout>