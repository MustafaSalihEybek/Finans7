<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="category"
            type="com.finans7.model.category.CategoryModel" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_bold"
            android:textColor="?attr/normalColor"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/bottom_sheet_category_item_imgArrow"
            android:layout_alignParentStart="true"
            android:text="@{category.NAME}"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="28dp"
            android:id="@+id/bottom_sheet_category_item_imgArrow"
            android:src="@drawable/ic_right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_height="28dp"
            app:tint="?attr/boldColor"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:src="?attr/shadowColor"
        android:layout_height="2dp"/>

</LinearLayout>

</layout>