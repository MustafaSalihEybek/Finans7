<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.settings.FontNewsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/font_news_fragment_customAppBar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:background="@drawable/bar_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:id="@+id/font_news_fragment_imgBack"
                android:src="@drawable/arrow_back"
                android:layout_centerVertical="true"
                android:layout_height="20dp"
                app:tint="?attr/appBarMenuColor"/>

            <TextView
                android:id="@+id/font_news_fragment_txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haber Yazısı Büyüklüğü"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="?attr/appBarTextColor"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="?attr/boldColor"
            android:fontFamily="@font/poppins_medium"
            android:text="Haber yazısı büyüklüğü"
            android:layout_height="wrap_content"/>

        <SeekBar
            android:min="50"
            android:max="200"
            android:layout_marginTop="5dp"
            android:progress="80"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            style="@style/MySeekBar"
            android:id="@+id/font_news_fragment_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:id="@+id/font_news_fragment_txtNewsContent"
            android:fontFamily="@font/poppins_bold"
            android:textColor="?attr/normalColor"
            android:text="Haber detayındaki yazı büyüklüğü burdaki gibi görünecektir"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>

</layout>