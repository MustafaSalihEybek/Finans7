<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Ekonomi"
            android:id="@+id/home_news_by_category_item_txtCategory"
            android:textSize="17sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="?attr/boldColor"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Tümünü Gör"
            android:textSize="16sp"
            android:id="@+id/home_news_by_category_item_txtAllCategory"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_medium"
            android:textColor="?attr/normalColor"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:nestedScrollingEnabled="false"
        android:id="@+id/home_news_by_category_item_recyclerView"
        android:layout_height="wrap_content"/>

</LinearLayout>