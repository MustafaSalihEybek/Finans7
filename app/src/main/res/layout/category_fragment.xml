<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/category_fragment_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_bold"
            android:text="TÃ¼m Kategoriler"
            android:textColor="?attr/boldColor"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/category_fragment_imgClose"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close"
            app:tint="?attr/boldColor" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/search_bar_bg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search_ic"
            android:layout_height="24dp"
            app:tint="?attr/searchBarTxtColor"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Kategori Ara"
            android:background="?attr/searchBarBgColor"
            android:textColor="?attr/searchBarTxtColor"
            android:id="@+id/category_fragment_editSearch"
            android:textColorHint="?attr/searchBarTxtColor"
            android:layout_marginStart="10dp"
            android:layout_height="45dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        android:id="@+id/category_fragment_recyclerView"
        android:layout_height="wrap_content"/>

</LinearLayout>