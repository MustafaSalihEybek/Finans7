<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="postdata"
            type="com.finans7.model.categorynews.PostListModel" />
    </data>

<ScrollView
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="wrap_content"
    tools:context=".view.PostFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">

       <ImageView
           android:layout_width="match_parent"
           android:scaleType="fitXY"
           android:downloadImg="@{postdata.mainimage}"
           android:id="@+id/new_fragment_imgNew"
           android:layout_height="220dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:textSize="19sp"
           android:layout_margin="10dp"
           android:textColor="?attr/boldColor"
           android:fontFamily="@font/poppins_bold"
           android:text="@{postdata.posttitle}"
           android:layout_height="wrap_content"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:gravity="center_vertical"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="27dp"
               android:src="@drawable/user"
               android:layout_height="27dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:text="@{postdata.authornamesurname}"
               android:textSize="15sp"
               android:textColor="?attr/normalColor"
               android:fontFamily="@font/poppins_medium"
               android:layout_marginStart="5dp"
               android:layout_height="wrap_content"/>

           <ImageView
               android:layout_width="3dp"
               android:layout_marginStart="5dp"
               android:src="?attr/shadowColor"
               android:layout_height="match_parent"/>

           <TextView
               android:layout_width="wrap_content"
               android:setPostDate="@{postdata}"
               android:textSize="15sp"
               android:layout_marginStart="5dp"
               android:fontFamily="@font/poppins_medium"
               android:textColor="?attr/normalColor"
               android:layout_height="wrap_content"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           android:gravity="center"
           android:layout_marginEnd="15dp"
           android:paddingStart="10dp"
           android:weightSum="5"
           android:paddingEnd="10dp"
           android:background="@drawable/share_bg"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:layout_marginStart="15dp"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:src="@drawable/facebook"
               android:layout_height="45dp"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginStart="10dp"
               android:src="@drawable/twitter"
               android:layout_height="45dp"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginStart="10dp"
               android:src="@drawable/google"
               android:layout_height="45dp"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginStart="10dp"
               android:src="@drawable/pinterest"
               android:layout_height="45dp"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginStart="10dp"
               android:src="@drawable/whatsapp"
               android:layout_height="45dp"/>

       </LinearLayout>

       <WebView
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:id="@+id/post_fragment_webView"
           android:layout_height="wrap_content"
           tools:ignore="WebViewLayout" />

       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:clipToPadding="false"
           android:paddingStart="15dp"
           android:paddingEnd="15dp"
           android:scrollbars="none">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="?attr/ticketBgColor"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:padding="10dp">

                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_tag_ticket"
                       app:tint="?attr/ticketTxtColor" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="5dp"
                       android:fontFamily="@font/poppins_bold"
                       android:text="Taglar"
                       android:textColor="?attr/ticketTxtColor"
                       android:textSize="15sp" />

               </LinearLayout>

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/post_fragment_recyclerViewTags"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:scrollbars="none" />

           </LinearLayout>

       </HorizontalScrollView>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_marginTop="25dp"
           android:layout_marginStart="15dp"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="35dp"
               android:src="@drawable/user"
               android:layout_height="35dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:id="@+id/search_fragment_linearTop"
               android:background="@drawable/comment_box_bg"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="15dp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:layout_height="wrap_content">

               <EditText
                   android:layout_width="match_parent"
                   android:hint="Yorum Yap"
                   android:textSize="16sp"
                   android:background="?attr/commentBoxBgColor"
                   android:textColor="?attr/commentBoxTextColor"
                   android:id="@+id/search_fragment_editSearch"
                   android:textColorHint="?attr/commentBoxTextColor"
                   android:layout_marginStart="10dp"
                   android:layout_height="45dp"/>

           </LinearLayout>

       </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:text="Son Yorumlar"
           android:textSize="20sp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:layout_marginTop="25dp"
           android:textColor="?attr/boldColor"
           android:fontFamily="@font/poppins_bold"
           android:layout_height="wrap_content"/>

       <TextView
           android:layout_width="wrap_content"
           android:textSize="15sp"
           android:layout_marginTop="10dp"
           android:id="@+id/post_fragment_txtCommentMessage"
           android:layout_gravity="center_horizontal"
           android:textColor="?attr/normalColor"
           android:visibility="gone"
           android:fontFamily="@font/poppins_medium"
           android:text="Henüz yorum bulunmamaktadır"
           android:layout_height="wrap_content"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:scrollbars="none"
           android:layout_marginTop="10dp"
           android:visibility="gone"
           android:id="@+id/post_fragment_recyclerViewComments"
           android:layout_height="wrap_content"/>

   </LinearLayout>

</ScrollView>

</layout>