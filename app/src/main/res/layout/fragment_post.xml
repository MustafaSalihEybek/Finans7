<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="postdata"
            type="com.finans7.model.categorynews.PostListModel" />
    </data>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="wrap_content"
    tools:context=".view.PostFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">

       <ImageView
           android:layout_width="match_parent"
           android:scaleType="fitXY"
           android:downloadImg="@{postdata.mainimage}"
           android:id="@+id/new_fragment_imgNew"
           android:layout_height="220dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:textSize="19sp"
           android:layout_margin="10dp"
           android:textColor="?attr/boldColor"
           android:fontFamily="@font/poppins_bold"
           android:text="@{postdata.posttitle}"
           android:layout_height="wrap_content"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="15dp"
               android:layout_toStartOf="@+id/post_fragment_linearPostLeft"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/user" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="5dp"
                   android:fontFamily="@font/poppins_medium"
                   android:text="@{postdata.authornamesurname}"
                   android:textColor="?attr/normalColor"
                   android:textSize="14sp" />

               <ImageView
                   android:layout_width="3dp"
                   android:layout_height="match_parent"
                   android:layout_marginStart="5dp"
                   android:src="?attr/shadowColor" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="5dp"
                   android:fontFamily="@font/poppins_medium"
                   android:setPostDate="@{postdata}"
                   android:textColor="?attr/normalColor"
                   android:textSize="14sp" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:orientation="horizontal"
               android:layout_alignParentEnd="true"
               android:gravity="center"
               android:id="@+id/post_fragment_linearPostLeft"
               android:layout_height="wrap_content">

               <RelativeLayout
                   android:layout_width="25dp"
                   android:id="@+id/post_fragment_relativeCommentCount"
                   android:background="@drawable/comment_count_bg"
                   android:layout_height="25dp">

                   <TextView
                       android:id="@+id/post_fragment_txtCommentCount"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:fontFamily="@font/poppins_bold"
                       android:textColor="?attr/commentCountTextColor"
                       android:textSize="15sp" />

               </RelativeLayout>

               <ImageView
                   android:layout_width="27dp"
                   android:layout_marginTop="2dp"
                   android:id="@+id/post_fragment_imgMessage"
                   android:src="@drawable/ic_comment"
                   android:layout_height="27dp"
                   app:tint="?attr/boldColor"/>

               <ImageView
                   android:layout_width="26dp"
                   android:layout_marginStart="15dp"
                   android:id="@+id/post_fragment_imgShare"
                   android:src="@drawable/share_black"
                   android:layout_height="26dp"
                   app:tint="?attr/boldColor"/>

           </LinearLayout>

       </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="10dp"
           android:gravity="center"
           android:layout_marginEnd="15dp"
           android:paddingStart="10dp"
           android:weightSum="5"
           android:paddingEnd="10dp"
           android:background="@drawable/share_bg"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:layout_marginStart="15dp"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/post_fragment_imgFacebook"
               android:src="@drawable/facebook"
               android:layout_height="40dp"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/post_fragment_imgTwitter"
               android:layout_marginStart="10dp"
               android:src="@drawable/twitter"
               android:layout_height="40dp"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/post_fragment_imgGmail"
               android:layout_marginStart="10dp"
               android:src="@drawable/google"
               android:layout_height="40dp"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/post_fragment_imgPinterest"
               android:layout_marginStart="10dp"
               android:src="@drawable/pinterest"
               android:layout_height="40dp"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/post_fragment_imgWhatsApp"
               android:layout_marginStart="10dp"
               android:src="@drawable/whatsapp"
               android:layout_height="40dp"/>

       </LinearLayout>

       <WebView
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:id="@+id/post_fragment_webView"
           android:layout_height="wrap_content"
           tools:ignore="WebViewLayout" />

       <HorizontalScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:clipToPadding="false"
           android:paddingStart="15dp"
           android:paddingEnd="15dp"
           android:scrollbars="none">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="?attr/ticketBgColor"
                   android:gravity="center"
                   android:orientation="horizontal"
                   android:padding="10dp">

                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_tag_ticket"
                       app:tint="?attr/ticketTxtColor" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="5dp"
                       android:fontFamily="@font/poppins_bold"
                       android:text="Taglar"
                       android:textColor="?attr/ticketTxtColor"
                       android:textSize="15sp" />

               </LinearLayout>

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/post_fragment_recyclerViewTags"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:scrollbars="none" />

           </LinearLayout>

       </HorizontalScrollView>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:gravity="center"
           android:id="@+id/post_fragment_linearComments"
           android:layout_marginTop="25dp"
           android:layout_marginStart="15dp"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="35dp"
               android:src="@drawable/user"
               android:layout_height="35dp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:background="@drawable/comment_box_bg"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="15dp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:layout_height="wrap_content">

               <EditText
                   android:layout_width="match_parent"
                   android:hint="Yorum Yap"
                   android:textSize="16sp"
                   android:focusableInTouchMode="false"
                   android:background="?attr/commentBoxBgColor"
                   android:textColor="?attr/commentBoxTextColor"
                   android:id="@+id/post_fragment_editSearch"
                   android:textColorHint="?attr/commentBoxTextColor"
                   android:layout_marginStart="10dp"
                   android:layout_height="45dp"/>

           </LinearLayout>

       </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:text="Son Yorumlar"
           android:textSize="20sp"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:layout_marginTop="25dp"
           android:textColor="?attr/boldColor"
           android:fontFamily="@font/poppins_bold"
           android:layout_height="wrap_content"/>

       <TextView
           android:layout_width="wrap_content"
           android:textSize="15sp"
           android:layout_marginTop="10dp"
           android:id="@+id/post_fragment_txtCommentMessage"
           android:layout_gravity="center_horizontal"
           android:textColor="?attr/normalColor"
           android:visibility="gone"
           android:fontFamily="@font/poppins_medium"
           android:text="Henüz yorum bulunmamaktadır"
           android:layout_height="wrap_content"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:scrollbars="none"
           android:nestedScrollingEnabled="false"
           android:layout_marginTop="10dp"
           android:visibility="gone"
           android:id="@+id/post_fragment_recyclerViewComments"
           android:layout_height="wrap_content"/>

   </LinearLayout>

</androidx.core.widget.NestedScrollView>

</layout>