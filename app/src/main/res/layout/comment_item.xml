<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="comment"
            type="com.finans7.model.comment.CommentModel" />
    </data>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/comment_item_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comment_item_imgAvatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:downloadAvatarImg="@{comment.avatar}" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/comment_item_imgAvatar"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_medium"
                android:text="ZiyaretÃ§i"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_bold"
                android:text="@{comment.commentdatetext}"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@{comment.commentcontent}"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/comment_item_linearLike"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="27dp"
                    android:src="@drawable/like"
                    android:layout_height="27dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="35dp"
                android:id="@+id/comment_item_linearDisLike"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/dislike"
                    android:layout_height="27dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

</layout>