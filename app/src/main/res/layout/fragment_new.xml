<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="newsdata"
            type="com.finans7.model.homepage.News" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.NewFragment">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:downloadImg="@{newsdata.MAINIMAGE}"
        android:id="@+id/new_fragment_imgNew"
        android:layout_height="220dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="19sp"
        android:layout_margin="10dp"
        android:textColor="?attr/boldColor"
        android:fontFamily="@font/poppins_bold"
        android:text="@{newsdata.POSTTITLE}"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="27dp"
            android:src="@drawable/user"
            android:layout_height="27dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@{newsdata.AUTHORNAMESURNAME}"
            android:textSize="15sp"
            android:textColor="?attr/normalColor"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="3dp"
            android:layout_marginStart="5dp"
            android:src="?attr/shadowColor"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:setNewsDate="@{newsdata}"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="?attr/normalColor"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:background="@drawable/share_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="PAYLAÅž"
            android:textColor="?attr/boldColor"
            android:fontFamily="@font/poppins_medium"
            android:textSize="17sp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/facebook"
            android:layout_height="45dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/twitter"
            android:layout_height="45dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/google"
            android:layout_height="45dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/pinterest"
            android:layout_height="45dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/whatsapp"
            android:layout_height="45dp"/>

    </LinearLayout>

</LinearLayout>

</layout>