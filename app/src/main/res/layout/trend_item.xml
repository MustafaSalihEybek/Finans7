<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="newsdata"
            type="com.finans7.model.homepage.News" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:background="@drawable/new_bg"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/trend_item_imgNews"
            android:layout_width="120dp"
            android:scaleType="centerCrop"
            android:layout_height="90dp"
            android:downloadImg="@{newsdata.mainimage}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/trend_item_imgNews"
            android:layout_alignBottom="@+id/trend_item_imgNews"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@{newsdata.posttime}"
                android:textSize="17sp"
                android:textColor="?attr/normalColor"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="@{newsdata.posttitle}"
                android:textSize="16sp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="?attr/normalColor"
                android:fontFamily="@font/poppins_medium"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

</layout>