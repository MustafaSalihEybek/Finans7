<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/search_fragment_linearTop"
        android:background="@drawable/search_bar_bg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search_ic"
            android:layout_height="24dp"
            app:tint="?attr/searchBarTxtColor"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Haber Başlığı ya da içeriği"
            android:background="?attr/searchBarBgColor"
            android:inputType="text"
            android:textColor="?attr/searchBarTxtColor"
            android:id="@+id/search_fragment_editSearch"
            android:textColorHint="?attr/searchBarTxtColor"
            android:layout_marginStart="10dp"
            android:layout_height="45dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/search_fragment_linearTop"
        android:id="@+id/search_fragment_recyclerView"
        android:layout_height="wrap_content"/>

</RelativeLayout>