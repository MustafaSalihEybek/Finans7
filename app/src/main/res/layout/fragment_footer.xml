<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/footerBgColor1"
    tools:context=".view.FooterFragment">

    <ImageView
        android:layout_width="275dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo_dark"
        android:layout_height="75dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:layout_marginBottom="25dp"
        android:paddingEnd="15dp"
        android:background="?attr/footerBgColor2"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:src="@drawable/instagram"
            android:layout_height="25dp"
            android:id="@+id/footer_fragment_imgInstagram"
            app:tint="@color/white"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/twitter_nav"
            android:id="@+id/footer_fragment_imgTwitter"
            android:layout_height="25dp"
            app:tint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="?attr/footerBgColor2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="\@2022 - Tüm hakları saklıdır. Geliştirme ve Tasarım"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="?attr/footerTextColor"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="İletişim"
                android:textSize="16sp"
                android:id="@+id/footer_fragment_txtContact"
                android:textColor="?attr/footerTextColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Gizlilik Sözleşmesi"
                android:layout_marginStart="25dp"
                android:textSize="16sp"
                android:id="@+id/footer_fragment_txtPrivacy"
                android:textColor="?attr/footerTextColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Künye"
                android:id="@+id/footer_fragment_txtTerms"
                android:layout_marginStart="25dp"
                android:textSize="16sp"
                android:textColor="?attr/footerTextColor"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</layout>