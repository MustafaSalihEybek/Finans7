<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.NewsByCategoryFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_fragment_customAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:id="@+id/news_by_category_fragment_imgBack"
                android:src="@drawable/arrow_back"
                android:layout_height="20dp"
                app:tint="?attr/appBarMenuColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:id="@+id/news_by_category_fragment_txtCategoryName"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"
                android:textColor="?attr/appBarTextColor"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/news_by_category_fragment_imgShare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginEnd="17dp"
            android:src="@drawable/share_black"
            app:tint="?attr/appBarMenuColor"/>

    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/news_by_category_fragment_progressBar"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="?attr/boldColor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:visibility="gone"
        android:id="@+id/news_by_category_fragment_recyclerView"
        android:layout_height="match_parent"/>

</LinearLayout>

</layout>