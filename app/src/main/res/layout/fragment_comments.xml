<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="defaultavatar"
            type="com.finans7.model.Avatar" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CommentsFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/comments_fragment_toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bar_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/comments_fragment_imgBack"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/arrow_back"
                    app:tint="?attr/appBarMenuColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Yorum Listesi"
                    android:textColor="?attr/boldColor"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/comments_fragment_linearBottom"
            android:layout_below="@+id/comments_fragment_toolBar"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/comments_fragment_linearTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comments_fragment_txtPostTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Ekmek Fiyatlarına Enerji Zammı Yolda!"
                    android:textColor="?attr/normalColor"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/comments_fragment_linearShorting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/comments_fragment_txtShorting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Yeniden Eskiye"
                        android:textColor="?attr/normalColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:rotation="90"
                        android:src="@drawable/ic_icon_right"
                        app:tint="?attr/normalColor" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:src="?attr/normalColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comments_fragment_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/comments_fragment_linearBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/comments_fragment_imgAvatars"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:downloadAvatarImg="@{defaultavatar.AVATARNAME}" />

            <RelativeLayout
                android:id="@+id/comments_fragment_linearComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/comments_fragment_imgSend"
                android:layout_toEndOf="@+id/comments_fragment_imgAvatars"
                android:background="@drawable/comment_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <EditText
                    android:id="@+id/comments_fragment_editSearch"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="?attr/commentBoxBgColor"
                    android:hint="Yorum Yap"
                    android:lines="1"
                    android:textColor="?attr/commentBoxTextColor"
                    android:textColorHint="?attr/commentBoxTextColor"
                    android:textSize="16sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/comments_fragment_imgSend"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/comments_fragment_linearComments"
                android:layout_alignBottom="@+id/comments_fragment_linearComments"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/send_bg"
                android:padding="10dp"
                android:src="@drawable/ic_send"
                android:visibility="gone"
                app:tint="?attr/commentBoxTextColor" />

        </RelativeLayout>

    </RelativeLayout>

</layout>