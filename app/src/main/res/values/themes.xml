<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">?attr/appBarColor</item>
        <item name="colorPrimaryVariant">?attr/statusBarColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">?attr/statusBarColor</item>
        <!-- Customize your theme here. -->
        <item name="statusBarColor">#FFFFFF</item>
        <item name="appBgColor">#EFEFEF</item>
        <item name="appBarColor">#FFFFFF</item>
        <item name="appBarTextColor">#707070</item>
        <item name="appBarMenuColor">#1A1A1A</item>
        <item name="shadowColor">#EAEAEA</item>
        <item name="boldColor">#1A1A1A</item>
        <item name="normalColor">#8F8F8F</item>
        <item name="bottomBarSelectedColor">#3E3E3E</item>
        <item name="bottomBarUnSelectedColor">#999999</item>
        <item name="indicatorSelectedColor">#3E3E3E</item>
        <item name="indicatorUnSelectedColor">#999999</item>
        <item name="newBgColor">#FFFFFF</item>
        <item name="arrowBorderColor">#999999</item>
        <item name="arrowInnerColor">#FFFFFF</item>
        <item name="arrowTintColor">#888888</item>
        <item name="borderColor">#EAEAEA</item>
        <item name="tagBorderColor">#999999</item>
        <item name="tagTextColor">#999999</item>
        <item name="searchBarBgColor">#AABECD</item>
        <item name="searchBarTxtColor">#5E5E5E</item>
        <item name="ticketBgColor">#D6D6D6</item>
        <item name="ticketTxtColor">#606060</item>
        <item name="commentBoxBgColor">#D6D6D6</item>
        <item name="commentBoxTextColor">#606060</item>
        <item name="splashBgColor">#ffffff</item>
        <item name="navBgColor">#ffffff</item>
        <item name="commentCountBgColor">#FB3434</item>
        <item name="commentCountTextColor">#ffffff</item>
        <item name="settingsBgColor">#ffffff</item>
        <item name="seekBarBgColor">?attr/normalColor</item>
        <item name="seekBarTintColor">#4A4A4A</item>
        <item name="seekBarThumbColor">?attr/boldColor</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">?attr/seekBarBgColor</item>
        <item name="android:progressTint">?attr/seekBarTintColor</item>
        <item name="android:thumbTint">?attr/seekBarThumbColor</item>
    </style>
</resources>